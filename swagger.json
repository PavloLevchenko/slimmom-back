  "paths": {
    "/api/products/": {
      "post": {
        "tags": [
          "Products"
        ],
        "description": "Публічний енд-поінт на отримання денної норми ккал та списку нерекомендованих продуктів",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/requestBodies/userParams"
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Products"
        ],
        "description": "Приватний енд-поінт на отримання денної норми ккал та списку нерекомендованих    продуктів, записує надану/отриману інформацію у БД",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/requestBodies/userParams"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Products"
        ],
        "description": "енд-поінт на пошук продуктів з БД по query-рядку",
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "category",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        }
      }
    },
    "/api/diary/": {
      "post": {
        "tags": [
          "Diary"
        ],
        "description": "Eнд-поінт на додавання з`їденого продукту у конкретний день",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/requestBodies/noteParams"
              }
            }
          }
        }
      }
    },
    "/api/diary/{date}": {
      "get": {
        "tags": [
          "Diary"
        ],
        "description": "Eнд-поінт на отримання всієї інформації щодо конкретного дня",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "2022-21-12"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        }
      }
    },
    "/api/diary/{noteId}": {
      "delete": {
        "tags": [
          "Diary"
        ],
        "description": "Eнд-поінт для видалення з`їденого продукту в конкретний день",
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        }
      }
    },
    "api/auth/registration": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Eнд-поінт реєстрації",
        "parameters": [],
        "responses": {
          "201": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/userRegister"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "409": {
            "description": "Conflict, email in use"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/requestBodies/registrationParams"
              }
            }
          }
        }
      }
    },
    "api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Eнд-поінт аутентифікації",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/responses/userLogin"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Incorrect login or password"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/requestBodies/loginParams"
              }
            }
          }
        }
      }
    },
    "api/auth/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "description": "Енд-поінт виходу з облікового запису",
        "parameters": [],
        "responses": {
          "204": {
            "description": "Success response"
          },
          "401": {
            "description": "Missing header with authorization token"
          }
        }
      }
    }
  },
  "components": {
    "requestBodies": {
      "userParams": {
        "type": "object",
        "properties": {
          "height": {
            "type": "number",
            "format": "float",
            "minimum": 10,
            "maximum": 300,
            "example": "150"
          },
          "age": {
            "type": "integer",
            "minimum": 1,
            "maximum": 200,
            "example": "18"
          },
          "currentWeight": {
            "type": "integer",
            "minimum": 10,
            "maximum": 500,
            "example": "60"
          },
          "desiredWeight": {
            "type": "integer",
            "minimum": 10,
            "maximum": 500,
            "example": "50"
          },
          "bloodType": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "example": "1"
          }
        },
        "required": [
          "height",
          "age",
          "currentWeight",
          "desiredWeight",
          "bloodType"
        ],
        "additionalProperties": false
      },
      "noteParams": {
        "type": "object",
        "properties": {
          "weight": {
            "type": "number",
            "format": "float",
            "minimum": 10,
            "maximum": 500,
            "example": "80"
          },
          "product": {
            "type": "string",
            "example": "639aa3fb5e433813b2d2a1d8"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2022-12-21"
          }
        },
        "required": [
          "weight",
          "product",
          "date"
        ],
        "additionalProperties": false
      },
      "loginParams": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "Dikfj434io"
          },
          "email": {
            "type": "string",
            "example": "nic@gmail.com"
          }
        },
        "required": [
          "password",
          "email"
        ],
        "additionalProperties": false
      },
      "registrationParams": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "Dikfj434io"
          },
          "email": {
            "type": "string",
            "example": "nic@gmail.com"
          },
          "name": {
            "type": "string",
            "example": "Nic"
          },
          "height": {
            "type": "number",
            "format": "float",
            "minimum": 10,
            "maximum": 300,
            "example": "150"
          },
          "age": {
            "type": "integer",
            "minimum": 1,
            "maximum": 200,
            "example": "18"
          },
          "currentWeight": {
            "type": "integer",
            "minimum": 10,
            "maximum": 500,
            "example": "60"
          },
          "desiredWeight": {
            "type": "integer",
            "minimum": 10,
            "maximum": 500,
            "example": "50"
          },
          "bloodType": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "example": "1"
          }
        },
        "required": [
          "password",
          "email",
          "name"
        ],
        "additionalProperties": false
      }
    },
    "responses": {
      "userRegister": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "201"
          },
          "data": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Registration successful"
              },
              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "nic@gmail.com"
                  },
                  "name": {
                    "type": "string",
                    "example": "Nic"
                  }
                }
              }
            }
          }
        }
      },
