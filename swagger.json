                  "age": {
                    "type": "number",
                    "example": "18"
                  },
                  "height": {
                    "type": "number",
                    "example": "150"
                  },
                  "currentWeight": {
                    "type": "number",
                    "example": "60"
                  },
                  "desiredWeight": {
                    "type": "number",
                    "example": "50"
                  },
                  "bloodType": {
                    "type": "number",
                    "example": "1"
                  }
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "externalDocs": {
